<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:id="@+id/fragments">
<ImageView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/imageQuestions"/>


   <RadioGroup
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="3"
       android:layout_below="@+id/imageQuestions"
       android:id = "@+id/radioGroup">

       <RadioButton
           android:text="Radio"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/option1"
           android:layout_toEndOf="@+id/option1"
           android:id="@+id/option2" />

       <RadioButton
            android:text="RadioButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/option2"
            android:layout_toEndOf="@+id/option2"
            android:id="@+id/option3" />

        <RadioButton
            android:text="RadioButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/option1"
            android:layout_alignParentStart="true" />
   </RadioGroup>

    <Button
        android:text="Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="115dp"
        android:id="@+id/getHint" />

    <Button
        android:text="Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/getHint"
        android:layout_marginBottom="56dp"
        android:id="@+id/getAnswer" />

    <Button
        android:text="check it .."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/getAnswer"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp"
        android:id="@+id/checkIt" />

</RelativeLayout>